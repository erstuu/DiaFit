<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DiaFit" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Background color untuk card (putih) -->
        <item name="colorSurface">#FFFFFF</item>
        <!-- Text color (hitam) -->
        <item name="colorOnSurface">#000000</item>
        <item name="colorSurfaceVariant">@color/grey</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <!-- Background color untuk root layout (abu-abu muda) -->
        <item name="android:windowBackground">#F8F8F8</item>
        <item name="android:colorBackground">#F8F8F8</item>
        <item name="colorOnBackground">#000000</item>
    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="Theme.DiaFit" parent="Base.Theme.DiaFit">
        <item name="colorPrimary">@color/black</item>

        <item name="android:statusBarColor">@color/diaPrimary</item>
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
    </style>

    <style name="Theme.DiaFit.OnBoarding" parent="Base.Theme.DiaFit">
        <item name="android:statusBarColor">@color/background_onboarding</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">29sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavigationTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/diaSecondary</item>
        <!-- Background color untuk card (putih) -->
        <item name="colorSurface">#FFFFFF</item>
        <!-- Text color (hitam) -->
        <item name="colorOnSurface">#000000</item>
    </style>
</resources>